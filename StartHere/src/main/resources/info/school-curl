curl -X GET -H "Accept: application/json" -H "Authorization: Bearer 3d28337c-b699-4ae6-86fe-4961f42b1142" https://harliquinn-schooldeploy.herokuapp.com/users/users

// add email to ginger
curl -X PUT -H "Content-Type: application/json" -H "Authorization: Bearer 3d28337c-b699-4ae6-86fe-4961f42b1142" -d  "{ \"userid\": 16, \"userphones\": [ { \"userphone\": \"whisker@home.local\" } ] }" https://harliquinn-schooldeploy.herokuapp.com/users/user/16

// look at all users and ginger's emails
