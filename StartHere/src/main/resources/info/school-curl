// verify that snoopy is deleted
curl -X GET -H "Accept: application/json" -H "Authorization: Bearer 56ab5075-de2e-43ba-a407-e52b8f267ac7" https://harliquinn-schooldeploy.herokuapp.com/users/user/15

// add ginger a new user
curl -X POST -H "Content-Type: application/json" -d "{\"username\": \"Ginger\", \"password\": \"EATEATEAT\"}" https://harliquinn-schooldeploy.herokuapp.com/createnewuser

// add snoopy again with full information
curl -X POST -H "Content-Type: application/json" -H "Authorization: Bearer 56ab5075-de2e-43ba-a407-e52b8f267ac7" -d "{ \"username\": \"Snoopy\", \"password\": \"password\", \"userRoles\": [ { \"role\": { \"roleid\": 1 } } ], \"userphones\": [ { \"userphone\": \"myemail@local.home\" } ]}" https://harliquinn-schooldeploy.herokuapp.com/users/user

// look at all users and verify that snoopy and ginger are available
curl -X GET -H "Accept: application/json" -H "Authorization: Bearer 56ab5075-de2e-43ba-a407-e52b8f267ac7" https://harliquinn-schooldeploy.herokuapp.com/users/users

// revokes token for admin
curl -X GET -H "Accept: application/json" -H "Authorization: Bearer 56ab5075-de2e-43ba-a407-e52b8f267ac7" https://harliquinn-schooldeploy.herokuapp.com/oauth/revoke-token

// this should fail with invalid token
curl -X GET -H "Accept: application/json" -H "Authorization: Bearer 56ab5075-de2e-43ba-a407-e52b8f267ac7" https://harliquinn-schooldeploy.herokuapp.com/users/users

