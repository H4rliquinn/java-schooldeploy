// get admins access code

curl -X POST --user "lambda-client:lambda-secret" -d "grant_type=password&username=admin&password=password"  https://harliquinn-schooldeploy.herokuapp.com/login
// admins access token = d62431aa-f429-40a0-ad99-712603c94cda

// get users access code

curl -X POST --user "lambda-client:lambda-secret" -d 'grant_type=password&username=barnbarn&password=ILuvM4th!' https://harliquinn-schooldeploy.herokuapp.com/login
// barnbarns access token = aef25636-c33b-48ab-9e12-e906e9c5daa9

